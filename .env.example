# ===========================================
# FRONTEND ENVIRONMENT VARIABLES (VITE_*)
# These are exposed to the browser
# ===========================================

# Firebase Configuration
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# Mindee OCR API Key
# Get your key from https://app.mindee.com
# The app will use mock data if this is not set
VITE_MINDEE_API_KEY=your_mindee_api_key_here

# ===========================================
# SERVER ENVIRONMENT VARIABLES
# These are NEVER exposed to the browser (secure)
# ===========================================

# Server Configuration
NODE_ENV=production
PORT=3000
FRONTEND_URL=https://www.trytabie.com

# Stripe (Payment Processing)
# Get keys from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_signing_secret

# Twilio (SMS)
# Get credentials from https://console.twilio.com
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
